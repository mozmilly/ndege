<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ndege">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".landing" />
        <activity android:name=".help.ViewHelpDetails" />
        <activity android:name=".help.HelpActivity" />
        <activity android:name=".units.orders.CommentOnProduct" />
        <activity android:name=".units.enquiry.EnquireItemActivity" />
        <activity android:name=".units.orders.ViewOrderDetailsActivity" />
        <activity android:name=".units.orders.ViewMyOrdersActivity" />
        <activity android:name=".units.ClientDetailsActivity" />
        <activity android:name=".units.CheckoutActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.LoginActivity" />
        <activity android:name=".login.otp.PhoneNumberActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".login.SignUpActivity" />
        <activity android:name=".login.otp.OtpActivity" />
        <activity android:name=".units.corecategories.ViewCoreCategories" />
        <activity android:name=".units.menucategories.ViewMenuCategories" />
        <activity android:name=".units.menuitems.ViewMenuItemsActivity" />
        <activity android:name=".units.NewArrivalActivity" />
        <activity android:name=".units.SendInquiryActivity" />
        <activity android:name=".units.ViewAllDiscounted" />
        <activity android:name=".units.ViewLargerImageActivity" />
        <activity android:name=".units.subcorecategories.ViewSubCoreCategories" />
        <activity android:name=".units.maincategories.ViewMainCategories" />
        <activity android:name=".units.orders.CheckOutSuccess" />
        <activity android:name=".adverts.MessageActivity" />

        <service
            android:name=".firebase_push.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <receiver
            android:name=".firebase_push.CallBroadcastReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.media.VOLUME_CHANGED_ACTION" />
            </intent-filter>
        </receiver>

        <activity android:name=".login.NdegeTermsActivity"></activity>
    </application>

</manifest>